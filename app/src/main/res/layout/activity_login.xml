<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3E4348"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.qqlogin.LoginActivity"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        >


    <ImageView
        android:id="@+id/QQLogin"
        android:paddingTop="50dp"
        android:layout_width="400dp"
        android:layout_height="189dp"
        android:src="@drawable/login1"
        android:background="#ACE7EF"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        />

    <EditText
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/QQLogin"
        android:minWidth="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:paddingTop="20dp"
        android:hint="请输入用户名"
        />
    <EditText
        android:id="@+id/userPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userName"
        android:minWidth="200dp"
        android:layout_centerHorizontal="true"
        android:paddingTop="20sp"
        android:hint="请输入密码"
        android:inputType="textPassword"
        />

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:paddingBottom="60dp"
    android:layout_alignParentBottom="true"
    android:background="#D3DED3"
    >
    <Button
        android:id="@+id/Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/login1"
        android:layout_below="@+id/userPwd"
        android:layout_margin="10dp"
        android:paddingTop="10dp"
        android:minWidth="200dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="登录"
        android:textSize="20sp"
        android:background="#1FBAF3"
        android:textColor="#FFFFFF"
        />
</FrameLayout>

    </RelativeLayout>




</RelativeLayout>
